.top{
  display: flex;/*弹性布局*/
  flex-direction: row;
  width: 100%;
  height: 40px;
  background-color: #c6e6f5;
}
.detail{
  text-align: center;/*文字水平居中*/
  line-height: 40px;/*文字垂直居中*/
  font-size: 12px;
  width: 70%;
}
.columnLine{
  background: #E4E6ED;
  width: 3px;
}
.state{
  font-size: 12px;
  text-align: center;
  line-height: 40px;
  width: 30%;
}
.divLineX{
  background: #E4E6ED;
  width: 100%;
  height: 2px;
}
/*请假记录*/
.record{
  display: flex;/*弹性布局*/
  flex-direction: row;
  width: 100%;
  height: 90px;
}
.details{
  display: flex;
  flex-direction: column;
  text-align: center;/*文字水平居中*/
  line-height: 80px;/*文字垂直居中*/
  font-size: 12px;
  width: 70%;
}
.startTime{
  margin-bottom: -65px;
}
/*审核通过*/
.states1{
  background-color:chartreuse;
  font-size: 12px;
  text-align: center;
  line-height: 90px;
  width: 30%;
}
/*审核中*/
.states2{
  font-size: 12px;
  text-align: center;
  line-height: 90px;
  width: 30%;
}
/*审核未通过*/
.states3{
  background-color:#ff6666;
  font-size: 12px;
  text-align: center;
  line-height: 90px;
  width: 30%;
}
/*按钮样式*/
.add{  
  width: 100rpx;
  height: 100rpx;
}
.applicate[plain]{
  padding: 0;
  border:none;   
  width: 100rpx;
  height: 100rpx;
}
.addBt{
  margin-left: 280px;
  margin-top: 150px;
}
/*点击按钮后弹出的请假申请页面*/
/*弹窗*/
.father{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;/*使得father中的windows水平居中*/
}
/*新建请假申请的界面*/
.leaveWindows{
  display: flex;
  flex-direction: column;/*表示该容器的子元素flex-item从上到下排列*/
  width: 250px;
  height: 300px;
  border:  2px solid #E4E6ED; 
  border-radius: 30px;
  background-color: white;
  position: absolute;
  top: 90px;
  z-index: 999;
}
/*新建请假申请*/
.addLeave{
  width: 100%;
  justify-content: center;
  display: flex;
  font-size: 15px;
  margin-top: 25px;
  margin-bottom: 25px;
}
/*时间选择器*/
.tui-picker-detail{
  margin-left: 20px;
  margin-bottom: 15px;
  font-size: 15px;
  display: flex;
}
.startDate{
  margin-right: 15px;
}
.endDate{
  margin-right: 15px;
}
.date{
  border: 2px solid #E4E6ED;
  border-radius: 10px;
  font-size: 15px;
  width: 60%;
  text-align: center;/*view中的文字水平居中*/
}
/*请假理由*/
.excuse{
  margin-left: 20px;
  margin-bottom: -10px;
  display:flex;
}
/*输入框*/
.toast-input{
  margin-left: 15px;
  border: 2px solid #E4E6ED;
  width: 120px;
}
/*请假凭证*/
.evidence{
  margin:20px;
  display: flex;
  margin-top: 25px;
}
.leaveEvidence{
  margin-right: 30px;
}
.clickLoad{
  background-color: white;
  font-size: 10px;
  border: 1px solid #E4E6ED;
  height: 30px;
  width:100% !important;
}
/*底部按钮*/
.click{
  margin-top: 10px;
  display: flex;
}
.bt{
  background-color: white;
  border:1px solid #E4E6ED;
  width: 100% !important;
  height: 30px; 
  font-size: 10px;
}
.confirm{
  margin-left: 35px;
  margin-right: 40px;
}