.father{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;/*使得father中的windows水平居中*/
}
.container1{
  display: flex;
  flex-direction: column;/*表示该容器的子元素flex-item从上到下排列*/
  width: 250px;
  height: 100px;
  border-radius: 10px;
  background-color: white;
  position: absolute;
  top: 20px;
  z-index: 999;
}
.lessonMeg{
  width: 100%;
  justify-content: center;
  display: flex;
  font-size: 15px;
  margin-top: 10px;
  margin-bottom: 5px;
}
