.container{
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;/*让子块垂直排列*/
  justify-content: space-around;/*让子view在垂直方向居中*/
}
/*包含头像和昵称*/
.userinfo {
  width: 100%;
  margin-top:20px;
  display: flex;
  flex-direction: column;/*让子块垂直排列*/
  align-items: center;
}
/*用户头像*/
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.item {
  display: flex;
  flex-direction: row;
}
.title {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-left: 15px;
  font-size: 15px;
}
.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  height: 50px;
  line-height: 50px;
  color: #888;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}


.usermotto {
  margin-top: 200px;
}

